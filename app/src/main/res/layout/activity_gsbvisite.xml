<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.GSBVisite" android:id="@+id/medicamentText">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="1">
            <ImageView
                    android:src="@drawable/lesrdv"
                    android:layout_width="match_parent"
                    android:layout_height="99dp" android:id="@+id/imageView9" tools:contentDescription="test"
                    android:contentDescription="TODO"/>
            <Button
                    android:text="@string/liste_des_rendez_vous"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/LRDV_Btn"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="1">
            <ImageView
                    android:src="@drawable/priserdv"
                    android:layout_width="match_parent"
                    android:layout_height="90dp" android:id="@+id/imageView10" tools:contentDescription="test"/>
            <Button
                    android:text="@string/prise_de_rendez_vous"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/PRDV_Btn"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="1">
            <ImageView
                    android:src="@drawable/medicaments"
                    android:layout_width="match_parent"
                    android:layout_height="82dp" android:id="@+id/imageView11" tools:contentDescription="test"/>
            <Button
                    android:text="@string/les_medicaments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/MED_Btn"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>